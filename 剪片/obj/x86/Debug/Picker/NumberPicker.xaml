<UserControl
    x:Class="剪片.Picker.NumberPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:剪片.Picker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Style/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!---->
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Button x:ConnectionId='1'  Name="button"  Style="{StaticResource  NumberButton}"                       >
        <Button.Flyout>
            <Flyout x:ConnectionId='2'  x:Name="flyout"                                                Placement="Left"  FlyoutPresenterStyle="{StaticResource FlyoutPresenter}">
                <Grid Width="180" Height="180">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:ConnectionId='3'  x:Name="七"                 Grid.Row="0" Grid.Column="0" Content="7"   Style="{StaticResource RectangleButton}"/>
                    <Button x:ConnectionId='4' x:Name="八"                 Grid.Row="0" Grid.Column="1" Content="8"   Style="{StaticResource RectangleButton}"/>
                    <Button x:ConnectionId='5' x:Name="九"                 Grid.Row="0" Grid.Column="2" Content="9"    Style="{StaticResource RectangleButton}"/>
                    <Button x:ConnectionId='6' x:Name="退格"                  Grid.Row="0" Grid.Column="3" Content="&#xEB96;"  FontFamily="Segoe MDL2 Assets" Style="{StaticResource RectangleButton}"/>

                    <Button x:ConnectionId='7' x:Name="四"                 Grid.Row="1" Grid.Column="0" Content="4"   Style="{StaticResource RectangleButton}"/>
                    <Button x:ConnectionId='8'  x:Name="五"                  Grid.Row="1" Grid.Column="1" Content="5"   Style="{StaticResource RectangleButton}"/>
                    <Button x:ConnectionId='9' x:Name="六"                  Grid.Row="1" Grid.Column="2" Content="6"   Style="{StaticResource RectangleButton}"/>
                    <Button x:ConnectionId='10' x:Name="负号"                     Margin='3'  Grid.Row="1"   Grid.Column="3"  Content="－"   Style="{StaticResource RectangleButton}"/>

                    <Button x:ConnectionId='11'  x:Name="一"                 Grid.Row="2" Grid.Column="0" Content="1"   Style="{StaticResource RectangleButton}"/>
                    <Button x:ConnectionId='12' x:Name="二"                 Grid.Row="2" Grid.Column="1" Content="2"   Style="{StaticResource RectangleButton}"/>
                    <Button x:ConnectionId='13' x:Name="三"                 Grid.Row="2" Grid.Column="2" Content="3"   Style="{StaticResource RectangleButton}"/>
                    <Button x:ConnectionId='14' x:Name="数点" IsEnabled="False"                  Grid.Row="2" Grid.Column="3" Content="."   Style="{StaticResource RectangleButton}"/>

                    <Button x:ConnectionId='15' x:Name="零"                  Grid.Row="3"   Grid.Column="0"  Content="0"    Style="{StaticResource RectangleButton}"/>
                    <Grid Grid.Row="3"   Grid.Column="1" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:ConnectionId='16' x:Name="确定"                   FontSize="22"  Grid.Column="0" Content="&#xEC61;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource RectangleButton}"/>
                        <Button x:ConnectionId='17' x:Name="取消"                   FontSize="22"   Grid.Column="1"  Content="&#xEB90;" FontFamily="Segoe MDL2 Assets"   Style="{StaticResource RectangleButton}"/>
                    </Grid>

                </Grid>
            </Flyout>
        </Button.Flyout>
    </Button>


</UserControl>

